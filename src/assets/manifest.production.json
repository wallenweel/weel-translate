{

  "manifest_version": 2,
  "name": "__MSG_EXTENSION_NAME__",
  "short_name": "__MSG_EXTENSION_SHORT_NAME__",
  "description": "__MSG_EXTENSION_DESCRIPTION__",
  "version": "2.0.5",

  "homepage_url": "https://github.com/wallenweel/weel-translation-vue",

  "developer": {
    "name": "Wallen Weel",
    "url": "https://github.com/wallenweel/weel-translation-vue"
  },

  "applications": {
    "gecko": {
      "id": "@weel-translate",
      "strict_min_version": "52.0"
    }
  },

  "default_locale": "en",

  "icons": {
    "24": "icons/weel-translate.svg"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      }
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "menus",
    "clipboardRead",
    "clipboardWrite"
  ],

  "web_accessible_resources": [
    "icons/*",
    "fonts/*"
  ],

  "background": {
    "scripts": [
      "manifest.js",
      "vendor.js",
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "24": "icons/weel-translate.svg"
    },
    "default_title": "Weel Translate 2",
    "default_popup": "popup/index.html"
  },

  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true,
    "browser_style": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "js": [
        "manifest.js",
        "vendor.js",
        "content/app.js"
      ],
      "css": ["content/app.css"],
      "run_at": "document_end"
    }
  ]
}
